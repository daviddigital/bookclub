<h1>Books</h1>

 <%= form_with url: "/books", method: :get do |f|  %>
    <%= f.label :query %>
    <%= f.text_field :query %>
    <%= f.submit :search %>
  <% end %>
<% if policy(Book).new? %>
    <p>  <%= link_to "New Book", new_book_path %></p>
<% end %> 

<table>
    <tr>
        <th> Cover </th>
        <th>Title</th>
        <th>Author</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td> <%= cl_image_tag book.cover.key, crop: :scale, width: 50, cloud_name: "testtestetsettetest123123123123" if book.cover.attached? %> </td>
        <td> <%= link_to book.title, book_path(book.id)%> </td>
        <td> <%= book.author.full_name %> </td>
    </tr>
    <% end %>
</table>
