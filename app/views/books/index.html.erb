<h1>Books</h1>


<table>
    <tr>
        <th>Title</th>
        <th>Author</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td> <%= link_to book.title, book_path(book.id)%> </td>
        <td> <%= "#{book.author.first_name} #{book.author.last_name}" %> </td>
    </tr>
    <% end %>
</table>
